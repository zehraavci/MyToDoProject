@model SearchCategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<div class="row">
    <div class="col-md-9">
        <p>
            <a class="btn btn-info" asp-action="Create">Create New Category</a>
        </p>
    </div>
    <div class="col-md-3">
        <form asp-action="Index" asp-controller="Categories">
            <div class="form-group">
                <input asp-for="SearchTitle" class="form-control" placeholder="Search..." />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="InDescription" /> Search in description
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>Transactions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Result) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
